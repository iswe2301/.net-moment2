<!DOCTYPE html>
<html lang="sv">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gissningsspelet</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Moment2_MVC.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <!-- Rubrik med länk till startsidan -->
        <h1><a asp-area="" asp-controller="Site" asp-action="Start">Gissningsspelet</a></h1>
        <nav>
            <!-- Knapp för att visa menyn på mobila enheter, anropar JS-funktion -->
            <button class="menu-toggle" onclick="toggleMenu()">☰</button>
            <ul>
                <!-- Navigeringslänkar med controller och action för routing -->
                <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Start" ? "active" : "")">
                    <a asp-area="" asp-controller="Site" asp-action="Start">Start</a>
                </li>
                <!-- Aktiv klass om action är GuessNumber -->
                <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "GuessNumber" ? "active" : "")">
                    <a asp-area="" asp-controller="Site" asp-action="GuessNumber">Spela</a>
                </li>
                <li class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")">
                    <a asp-area="" asp-controller="Site" asp-action="Contact">Kontakt</a>
                </li>
            </ul>
        </nav>
    </header>

    <!-- Huvudinnehåll -->
    <main>
        @RenderBody() <!-- Rendera innehållet -->
        <img src="~/img/questionmark.png" alt="Frågetecken" /> <!-- Bild som visas på alla sidor -->
    </main>

    <!-- Footer -->
    <footer>
        <p>&copy; 2025 Isa Westling</p>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
